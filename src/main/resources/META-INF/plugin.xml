<idea-plugin>
    <id>org.yax.yapiplug</id>
    <name>Spring Controller Analyzer</name>
    <vendor>YourName</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action id="AnalyzeControllerAction"
                class="org.yax.yapiplug.action.AnalyzeAction"
                text="分析接口并上传到yapi"
                description="发送方法详情到大模型分析">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable parentId="tools"
                            instance="org.yax.yapiplug.config.PluginConfigurable"
                            id="org.yax.yapiplug.config.PluginConfigurable"
                            displayName="Yapi Plugin"/>
    </extensions>
</idea-plugin>